{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "Blog",
      "path": "[[workspace]]/content/blog"
    },
    {
      "title": "Editorial",
      "path": "[[workspace]]/content/editorial"
    },
    {
      "title": "Events",
      "path": "[[workspace]]/content/events"
    },
    {
      "title": "Media",
      "path": "[[workspace]]/content/media"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "pageBundle": false,
      "previewPath": "blog",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "required": true,
          "default": "Mike Davis"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "required": true
        },
        {
          "title": "Type",
          "name": "type",
          "type": "string",
          "default": "blog",
          "required": true
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string",
          "required": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft",
          "default": true
        }
      ]
    }
  ]
}