{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "Blog Posts",
      "path": "[[workspace]]/content/blog"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "pageBundle": false,
      "previewPath": "content/blog",
      "fileType": "md",
      "fileLocation": "{{contentfolder}}/blog/{{slug}}.md",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Type",
          "name": "type",
          "type": "string",
          "default": "blog",
          "required": true
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string",
          "default": "Mike Davis",
          "required": true
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "title": "Summary",
          "name": "summary",
          "type": "string",
          "required": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Draft",
          "name": "draft",
          "type": "boolean",
          "default": true
        }
      ]
    }
  ]
}